<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_game"
    tools:context="com.example.adeel.themaze.GameActivity">

    <GridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="@dimen/button_width"
        android:gravity="center"
        android:verticalSpacing="1dp"
        android:layout_below="@+id/buttonSolve"
        android:layout_centerInParent="true"
        android:numColumns="auto_fit"/>

    <Button
        android:id="@+id/buttonSolve"
        android:layout_width="@dimen/solve_button_width"
        android:layout_height="@dimen/solve_button_height"
        android:layout_alignParentLeft="true"
        android:text="@string/button_solve">
    </Button>

    <Button
        android:id="@+id/buttonNewGame"
        android:layout_width="@dimen/solve_button_width"
        android:layout_height="@dimen/solve_button_height"
        android:layout_alignParentRight="true"
        android:text="@string/button_new_game">
    </Button>


</RelativeLayout>
